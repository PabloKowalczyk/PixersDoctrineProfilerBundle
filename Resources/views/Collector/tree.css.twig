.tree__header,
.tree__row {
    width: 100%;
    display: table;
    border-top: 1px solid #E0E0E0;
}
.tree__header {
    background: #E0E0E0;
    font-weight: bold;
}
.tree__col {
    padding: 8px 10px;
    display: table-cell;
    width: 70px;
}
.tree__col:first-child {
    width: auto;
}
.tree-wrapper {
    background: #fff;
    border: 1px solid #E0E0E0;
    box-shadow: 0px 0px 1px rgba(128, 128, 128, .2);
}
.tree,
.tree ul {
    margin: 0 0 0 0;
    padding: 0;
    list-style: none;
    position: relative;
}
.tree__toggle {
    color: inherit;
    display: block;
}
.tree__switch {
    float: left;
    width: 20px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    border: 1px solid #E0E0E0;
    position: absolute;
    left: 14px;
    top: 0;
}
.tree__switch:before {
    content: '+';
}
.tree ul {
    margin-left: -15px;
    display: none
}
.tree:before,
.tree ul:before {
    content: "";
    display: block;
    width: 0;
    position: absolute;
    top: -40px;
    bottom: 0;
    left: 0;
    border-left: 1px solid #E0E0E0;
}
.tree li {
    margin: 10px 0;
    padding: 10px 0 0 40px;
    position: relative;
}
.tree .tree__leaf:before {
    width: 40px;
}
.tree li:before {
    content: "";
    display: block;
    width: 10px;
    height: 0;
    border-top: 1px solid #E0E0E0;
    margin-top: -1px;
    position: absolute;
    top: 11px;
    left: 0;
}
.tree li:last-child:before {
    background: white;
    height: auto;
    top: 11px;
    bottom: 0;
}
.tree--open > ul {
    display: block;
}
.tree--open > .tree__row .tree__switch:before {
    content: '-';
}
